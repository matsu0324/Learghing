<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="main-image">
		    <%= attachment_image_tag @post, :image, :fill, 850, 700, format: 'jpeg' %>
      </div>
      <!--非同期通信-->
      <div id="post_<%= @post.id %>" class="post-info">
      	<div><b>posted by
      		<%= link_to user_path(@post.user) do %>
				    <%= attachment_image_tag(@post.user, :image, :fill, 20, 20, fallback: "no-image.jpg") %>
				    <%= @post.user.name %></b>
				  <% end %>
      	</div>
        <div class="favorite-btn"><%= render 'favorites/favorite-btn', post: @post %></div>
			  <div class="comments-count">コメント数: <%= @post.post_comments.count %></div>
			</div>
      <div class="main-sentence"><b><%= @post.sentence %></b></div>
      <table border="1">
      	<tr>
      		<th>日本語訳</th><td class="main-meaning"><b><%= @post.meaning %></b></td>
      	</tr>
      	<tr>
      		<th>解説</th><td class="main-meaning"><b><%= @post.explanation %></b></td>
      	</tr>
      </table>







						<% if @post.user == current_user %>
						  <td><%= link_to "Edit", edit_post_path(@post), class: "btn-sm btn-success" %></td>
						  <td><%= link_to "Destroy", post_path(@post), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %></td>
						<% end %>
				  </tr>


						<!--コメント投稿機能-->
						<%= form_with(model:[@post, @post_comment], remote: true) do |f| %>
						  <div class="row">
						    <div class="col-lg-12">
						      <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
						    </div>
						  </div>
						  <%= f.submit "Post", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
						<% end %>
						<!---->
						<ol class="post_comments">
					    <%= render "post_comments/index", post: @post %>
					  </ol>
					  </div>
					  </div>
					  </div>