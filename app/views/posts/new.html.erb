<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <%= form_with model: @post, local:true do |f| %>
        <div class="field row">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'col-xs-12 book_title' %>
        </div>

  <div class="field row">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'col-xs-12 book_body' %>
  </div>

  <div class="actions row">
    <%= f.submit class: 'btn btn-primary col-xs-12' %>
  </div>
<% end %>
      
      
    </div>
  </div>
</div>