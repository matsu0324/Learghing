<div class="container">
  <div class="row">
  	<div class="col-lg-12">
	  <div class="main-box">
	    <% @posts.each do |post| %>
	      <div class="user-info">
		    <%= link_to user_path(post.user) do %>
		      <%= attachment_image_tag post.user, :image, :fill, 50, 50, fallback: "no-image.jpg" %>
		      <%= post.user.name %>
		    <% end %>
		  </div>
	      <div class="sentence-image">
		    <%= link_to post_path(post) do %>
			  <%= attachment_image_tag post, :image, :fill, 270, 270, format: 'jpeg' %>
		    <% end %>
			<div class="sentence"><b><%= truncate(post.sentence, length: 30) %></b></div>
		  </div>
		  <div id="post_<%= post.id %>">
		    <div class="favorite-btn"><%= render "favorites/favorite-btn", post: post %></div>
		  </div>
		  <div class="comments-count">コメント数: <%= post.post_comments.count %></div>
		<% end %>
	  </div>
	</div>
  </div>
</div>




