<table class="table-layout" border="1">
  <thead>
    <tr>
      <th class="th-layout">ユーザー</th>
      <th class="th-layout">文章</th>
      <th class="th-layout">日本語訳</th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td class="search-info">
          <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag(post.user, :image, :fill, 50, 50, fallback: "no-image.jpg") %>
            <%= post.user.name %>
          <% end %>
        </td>
        <td class="search-info"><%= link_to post.sentence, post_path(post), class: "post_#{post.id}" %></td>
        <td class="search-info"><%= post.meaning %></td>
      </tr>
    <% end %>
  </tbody>
</table>