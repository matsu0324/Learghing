<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to user_path(post.user) do %>
          <%= attachment_image_tag(post.user, :image, :fill, 50, 50, fallback: "no-image.jpg") %>
          <% end %>
        </td>
        <td><%= link_to post.sentence, post_path(post), class: "post_#{post.id}" %></td>
        <td><%= post.meaning %></td>
      </tr>
    <% end %>
  </tbody>
</table>