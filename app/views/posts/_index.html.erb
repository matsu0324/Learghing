<div class="container">
  <div class="row">
  	<div class="col-lg-12">
      <div class="main-box">
	      <% posts.each do |post| %>
          <div class="sentence-image">
            <div class="user-info-index">
	            <%= link_to user_path(post.user) do %>
	              <%= attachment_image_tag post.user, :image, fallback: "no-image.jpg", size:"50x50" %>
	              <%= post.user.name %>
	            <% end %>
	          </div>
	          <div class="index-post-image">
	            <%= link_to post_path(post) do %>
	              <%= attachment_image_tag post, :image, class:"sentence-picture", format: "jpeg" %>
	  	        <% end %>
	          </div>
	          <div class="sentence"><b><%= truncate(post.sentence, length: 30) %></b></div>
	          <div id="post_<%= post.id %>">
	            <div class="favorite-btn"><%= render "favorites/favorite-btn", post: post %></div>
	            <div class="comments-count">コメント数: <%= post.post_comments.count %></div>
	          </div>
	        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
