<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% @users.each do |user| %>
        <div class="col-lg-6">
          <div class="image-profile">
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :image, :fill, 300 , 300, fallback: "no-image.jpg" %>
            <% end %>
          </div>
          <div class="profile-content">
            <div class="name-index"><%=link_to user.name, user_path(user) %></div>
            <div class="post-number">
              投稿数:<%= user.posts.count %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>