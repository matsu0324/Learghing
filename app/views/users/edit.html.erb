<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>

      <%= form_with model: @user, local: true do |f| %>
			<div class="field">
				<%= f.label :name %>
				<%= f.text_field :name, class: "name" %>
			</div>

			<div class="field">
				<%= f.label :image %>
				<%= f.attachment_field :image, class: "user_image" %>
			</div>

			<div class="field">
				<%= f.label :profile %>
				<%= f.text_area :profile, class: "introduction" %>
			</div>

			<div class="actions">
				<%= f.submit %>
			</div>

		  <% end %>

	 	 </div>
   </div>
 </div>
