<section class="slice slice-lg sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="form-user style-1 rounded has-shadow-1">
          <div class="form-header text-center">
            <h2 class="form-header-title"><b>プロフィール編集</b></h2></h2>
          </div>
          <div class="form-body">
            <%= form_with model: @user, local:true do |f| %>
              <%= render "users/error", user: @user %>
              <div class="form-group has-icon">
                <% if @user.image.present? %>
                  <%= attachment_image_tag @user, :image, format: "jpeg", size: "250x200", id: "img-edit" %>
                <% end %>
                <div class="update-image">
                  <%= f.attachment_field :image, id: "img-file", class: "input" %>
                </div>
              </div>
              <div class="form-group">
                <label class="control-label sr-only" for="inputSentence">名前</label>
                <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前(必須)" %>
              </div>
              <div class="form-group">
                <label class="control-label sr-only" for="inputProfile">プロフィール</label>
                <%= f.text_area :profile, autofocus: true, class:"form-control", id: "introduction", placeholder:"自己紹介" %>
              </div>
              <div class="form-group">
                <label class="control-label sr-only" for="inputEmail">メールアドレス</label>
                <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
              </div>
              <div class="submit-button">
                <%= f.submit "更新", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
