<table border="1">
  <thead>
    <tr>
      <th>プロフィール画像</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td class="search-info"><%= attachment_image_tag(user, :image, :fill, 50, 50, fallback: "no-image.jpg") %></td>
        <td><%= user.name %></td>
        <td><%= link_to '詳細画面へ', user_path(user), class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
