<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% users.each do |user| %>
        <div class="col-lg-3 user-block">
          <div class="image-profile">
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :image, fallback: "no-image.jpg", size:"200x200" %>
            <% end %>
          </div>
          <div class="profile-content">
            <div class="name-index"><%= link_to truncate(user.name, length: 8), user_path(user) %></div>
            <div class="post-number">
              投稿数:<%= user.posts.count %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
