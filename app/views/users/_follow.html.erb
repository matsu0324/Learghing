<div class="follow-number"><b>フォロー: <%= link_to user.followings.count, user_followings_path(user) %></b></div>
<div class="follow-number"><b>フォロワー: <%= link_to user.followers.count, user_followers_path(user) %></b></div>

<div class="row">
  <div class="follow-button">
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-danger" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
      <% end %>
    <% end %>
  </div>
</div>
