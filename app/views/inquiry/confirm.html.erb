<div class="page-header">
  <h1>お問い合わせ</h1>
</div>

<%= form_with model: @inquiry, url: inquiry_thanks_path, local: true do |f| %>
  <div>
    <div>名前</div>
    <div>
      <%= f.hidden_field :name %>
      <%= @inquiry.name %>
    </div>
  </div>
  <div>
    <div>メールアドレス</div>
    <div>
      <%= f.hidden_field :email %>
      <%= @inquiry.email %>
    </div>
  </div>
  <div>
    <div>お問い合わせ内容</div>
    <div>
      <%= f.hidden_field :message %>
      <%= simple_format(@inquiry.message) %>
    </div>
  </div>
  <%= f.submit '送信', :class => 'btn btn-primary' %>
<% end %>