<%= form_with model: @inquiry, url: inquiry_confirm_path, local: true do |f| %>
  <div class="page-header">
    <h1>お問い合わせ</h1>
  </div>

  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>名前<span class="text-danger">（必須）</span></div>
  <div><%= f.text_field :name %></div>
  <div>メールアドレス<span class="text-danger">（必須）</span></div>
  <div><%= f.text_field :email %></div>
  <div>お問い合わせ内容</div>
  <div><%= f.text_area :message %></div>
  <%= f.submit '確認', class: 'btn btn-primary' %>
<% end %>