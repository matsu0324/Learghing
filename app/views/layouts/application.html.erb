<!DOCTYPE html>
<html>
  <head>
    <title>Learghing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/core/main.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/daygrid/main.min.css">
    <script src="https://kit.fontawesome.com/8cc3ddd09d.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header class="main-head">
      <a href="https://5a9040c3ddc74f06abca081cef4e4cbf.vfs.cloud9.us-east-1.amazonaws.com/"><img src='/assets/main-logo.png', class="main-logo", width="120" height="70" alt="ロゴ" ></a>
    </header>

    <%= render 'layouts/header' %>

    <div class='body'>
      <div class='container'>
        <% if user_signed_in? %>
          <%= render 'layouts/search' %>
        <% end %>
      </div>
    </div>

    <%= yield %>


    <%= render 'layouts/footer' %>
  </body>
</html>
