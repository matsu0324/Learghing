<!DOCTYPE html>
<html>
  <head>
    <title>Learghing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/8cc3ddd09d.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class='body'>
      <div class='container'>
        <% if user_signed_in? %>
          <%= render 'layouts/search' %>
        <% end %>
      </div>
    </div>

    <%= yield %>


    <%= render 'layouts/footer' %>
  </body>
</html>
